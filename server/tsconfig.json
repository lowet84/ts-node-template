{
  "files": ["./server.ts"],
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "server",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/@types/*", "./typings/*"]
    }
  }
}
